# Suggested at https://stackoverflow.com/questions/24071491/how-can-i-make-a-python-wheel-from-an-existing-native-library
class BinaryDistribution(Distribution):
    def is_pure(foo):
        return False
    def has_ext_modules(foo):
        return True

